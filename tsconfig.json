{
    "compilerOptions": {
      "strict": false,
      "allowJs": true,
      "checkJs": true,
      "esModuleInterop": true,
      "noImplicitAny": false,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["ES2020", "ESNext.Array", "DOM"],
      "module": "CommonJS",
      "moduleResolution": "Node",
      "noImplicitThis": true,
      "outDir": "dist",
      "removeComments": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "target": "ESNext"
    },
    "include": ["global.d.ts", "types/**/*d.ts", "**/*.ts"],
    "exclude": ["node_modules"]
  }